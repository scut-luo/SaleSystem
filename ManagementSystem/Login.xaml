<Window x:Class="ManagementSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="131" Width="220" ResizeMode="NoResize" Loaded="WindowLoaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <TextBlock Margin="5" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">用户名：</TextBlock>
        <TextBlock Margin="5" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">密码：</TextBlock>
        
        <TextBox Name="tb_username" Margin="5" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />
        <PasswordBox Name="pb_password" Margin="5" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" />
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">            
            <Button Name="LoginSystem" Margin="5" VerticalAlignment="Center" Width="50" Click="LoginSystem_Click">登录</Button>
            <Button Name="Cancel" Margin="5" VerticalAlignment="Center" Width="50" Click="Cancel_Click">取消</Button>
        </StackPanel>
        
    </Grid>
</Window>
